{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
        "module": "ES2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        "sourceMap": true,
        "strict": true,
        "target": "ES6",
        "paths": {
            "@/*": ["./*"]
        },
        "baseUrl": "src"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
